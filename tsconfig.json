{
  "compilerOptions": {
    "target": "es2016",
    "lib": [ "es2021", "dom" ],
    "types": [ "reflect-metadata" ],
    "module": "es6",
    "rootDir": "src",
    "declaration": true,
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "excludeInternal": true,
    "excludePrivate": true,
    "out": "../team-bge.github.io/_docs"
  }
}
