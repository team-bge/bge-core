{
  "compilerOptions": {
    "target": "es2016",
    "lib": [ "es6", "dom" ],
    "types": [ "reflect-metadata" ],
    "module": "es6",
    "rootDir": "src",
    "declaration": true,
    "allowJs": false,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
  }
}